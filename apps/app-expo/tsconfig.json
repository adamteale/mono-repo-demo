{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@Presentation/*": ["../app-core/src/presentation/*"],
      "@app-expo/*": ["./*"],
      "@app-core/*": ["../app-core/src/*"],
      "@atomic-library/*": ["../../packages/atomic-library/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "../../packages/atomic-library/src/assets/**/*.tsx",
    "../../packages/atomic-library/src/assets/**/*.ts",
    "nativewind-env.d.ts"
  ]
}
