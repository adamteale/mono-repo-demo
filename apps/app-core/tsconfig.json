{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@app-core/*": ["./*"],
      "@App/*": ["./src/*"],
      "@Assets/*": ["./assets/*"],
      "@Data/*": ["./src/data/*"],
      "@Domain/*": ["./src/domain/*"],
      "@Environment": ["./Environment"],
      "@Network/*": ["src/data/network/*"],
      "@Presentation/*": ["./src/presentation/*"],
      "@Resources/*": ["src/resources/*"],
      "@Storage/*": ["src/data/storage/*"],
      "@Utils/*": ["src/utils/*"]
    },
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
