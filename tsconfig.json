{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react-jsx",
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": "dist",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": ".",
    "paths": {
      "@app-next/*": ["apps/app-next-OLD/*"],
      "@app-expo/*": ["apps/app-expo/*"],
      "@app-core/*": ["apps/app-core/*"],
      "@atomic-web/*": ["packages/atomic-web/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["apps/**/*", "packages/**/*"],
  "extends": "expo/tsconfig.base"
}
